   serv_grp             Varchar(15)          null,
   serv_cat             Varchar(15)          null,
   constraint PK_TI_SERV primary key (serv_id)
)
go

/*==============================================================*/
/* Table: ti_suppliers                                          */
/*==============================================================*/
create table ti_suppliers (
   fil_id               int                  null,
   suppl_id             int                  identity,
